generator client {
  provider = "prisma-client-js"
  //output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserAuthentication {
  id                Int       @id @default(autoincrement())
  username          String    @unique
  password          String
  role              UserRole
  createdAt         DateTime  @default(now())
  passwordChangedAt DateTime? @db.Timestamp(6)
  firstName           String?
  lastName            String?
  address             String?
  birthday            DateTime? @db.Timestamp(6)
  gender              String?
  language            String?
  email               String?
  phone               String?
}

model LogData {
  id            Int      @id @default(autoincrement())
  message       String
  port          Int
  sourceIP      String
  timestamp     DateTime @default(now())
  action        String
  destinationIP String
  protocol      String
  reason        String
}

enum UserRole {
  ADMIN
  ANALYST
  User
}
